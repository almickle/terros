# Automatically install peer dependencies
auto-install-peers=true

# Link all packages in the workspace
link-workspace-packages=true

# Use a single lockfile for the workspace
shared-workspace-lockfile=true

# Don't fail on peer dependency issues
strict-peer-dependencies=false

# Prefer packages from the workspace
prefer-workspace-packages=true

# Store cache in node_modules/.pnpm-store
store-dir=.pnpm-store

# Enable strict SSL
strict-ssl=true

# Set the package import method to hard link
package-import-method=hardlink

# Enable progress bars
progress=true
